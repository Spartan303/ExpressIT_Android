<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:context=".ImagePreviewActivity">
    
    
    <ImageView android:id="@+id/preview_imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_launcher_ctv"
        android:layout_above="@+id/flow_continue"
        android:padding="10dp"
        android:contentDescription="@string/imagePreview"/>
    
    <Button
        android:id="@+id/flow_continue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/flow_continue"
        android:layout_alignParentBottom="true"
         />

</RelativeLayout>

