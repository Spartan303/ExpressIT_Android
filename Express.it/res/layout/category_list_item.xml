<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:descendantFocusability="blocksDescendants" 
	android:background="@android:color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector">

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_margin="10dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:src="@drawable/ic_launcher_ctv" >
        </ImageView>

        <com.netpace.expressit.android.ui.TypefaceTextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:capitalize="words"
            android:clickable="false"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:text="@string/select_Category_text"
            android:textColor="@color/text_hint_color"
            android:textColorHint="@color/app_bg_color"
            android:textSize="18sp"
            android:textStyle="bold"
            custom:typeface="HelveticaNeue-Medium" />

    </LinearLayout>

</RelativeLayout>